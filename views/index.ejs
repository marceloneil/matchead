        <!--registration template-->
        <script type="text/ng-template" id="/register.html">
            <div class="col-md-6 col-md-offset-3">
                <div class="page-header">
                    <h1>Matchead</h1>
                </div>
                
                <div ng-show="error" class="alert alert-danger row">
                    <span>{{ error.message }}</span>
                </div>
                
                <form ng-submit="register()" style="margin-top:30px;">
                    <h3>Register</h3>
                    
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
                    </div>
                    
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Twitter" ng-model="user.twittername"></input>
                    </div>
                    
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
                    </div>
                    
                    
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </script>
        
        <script type="text/ng-template" id="/login.html">
            <div class="col-md-6 col-md-offset-3">
                <div class="page-header">
                    <h1>Matchead</h1>
                </div>
                
                <div ng-show="error" class="alert alert-danger row">
                    <span>{{ error.message }}</span>
                </div>
                
                <form ng-submit="logIn()" style="margin-top:30px;">
                    <h3>Log In</h3>
                    
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
                    </div>
                    
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
                    </div>
                    <button type="submit" class="btn btn-primary">Log In</button>
                </form>
            </div>
        </script>
        
        <script type="text/ng-template" id="/text.html">
            <div class="col-md-6 col-md-offset-3">
                <div class="page-header">
                    <h1>Matchead</h1>
                </div>
                
                <div ng-show="error" class="alert alert-danger row">
                    <span>{{ error.message }}</span>
                </div>
               
                
                <form ng-submit="analyze()" style="margin-top:30px;">
                    <h3>Enter Twitter usernames</h3>
                    
                    <div class="form-group">
                        <input type="text" class="form-control textbox_size" placeholder="Your Twitter name" ng-model="person"></input>
                    </div>
                    
                    
                    <div class="form-group">
                        <input type="text" class="form-control textbox_size" placeholder="Company's Twitter name" ng-model="company"></input>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Analyze</button>
                </form>
                
                <br>
                
                <h2>Analysis</h2>
                
                <canvas id="radar" style="margin-bottom: 20px" class="chart chart-radar" chart-data="data" chart-labels="labels" series="series" chart-legend="true" chart-options="{pointLabelFontSize: 20}"></canvas>
            </div>
        </script>
